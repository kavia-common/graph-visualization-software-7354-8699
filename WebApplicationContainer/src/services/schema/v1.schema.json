{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/graph-schema/v1",
  "title": "GraphDesignV1",
  "type": "object",
  "required": ["meta", "nodes", "edges"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["v"],
      "properties": {
        "v": { "type": "integer", "enum": [1] },
        "name": { "type": "string" },
        "createdAt": { "type": "string" }
      },
      "additionalProperties": true
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "position", "data"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "group": { "type": "string", "description": "Optional group id this node belongs to" },
          "position": {
            "type": "object",
            "required": ["x", "y"],
            "properties": { "x": { "type": "number" }, "y": { "type": "number" } }
          },
          "data": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "collapsed": { "type": "boolean", "description": "Node-local collapsed flag" },
              "groupCollapsed": { "type": "boolean", "description": "If node is a group, whether it's collapsed" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "source", "target"],
        "properties": {
          "id": { "type": "string" },
          "source": { "type": "string" },
          "target": { "type": "string" },
          "type": { "type": "string" },
          "label": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
