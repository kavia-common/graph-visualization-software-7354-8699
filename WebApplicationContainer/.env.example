# Frontend environment variables
REACT_APP_BACKEND_URL=https://your-backend.example.com
REACT_APP_API_BASE=
REACT_APP_FRONTEND_URL=
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=false
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=

# Mock API settings (for local demo)
# When true, routes all API calls to an in-memory mock backend.
REACT_APP_USE_MOCK_API=true
# Random error probability between 0 and 1 (0 disables random errors)
REACT_APP_MOCK_ERROR_RATE=0
# Optional artificial network delay in ms (default 120ms)
REACT_APP_MOCK_DELAY_MS=150
